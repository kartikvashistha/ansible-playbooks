[env]
term = "xterm-256color"

[font]
normal = { family = "JetBrainsMonoNL Nerd Font", style = "Regular" }
italic = { family = "JetBrainsMonoNL Nerd Font", style = "Italic" }
builtin_box_drawing = false
size = 15

[window]
option_as_alt = "Both"
dynamic_padding = true

[colors.primary]
background = '#1D1D1E'
foreground = '#D4D4D4'

[colors.cursor]
text = "#1F1F1F"
cursor = "#D4D4D4"

[colors.normal]
black = "#1F1F1F"
red = "#F44747"
green = "#6A9955"
yellow = "#FBF05E"
blue = "#79ADF2"
magenta = "#C586C0"
cyan = "#4FC1FF"
white = "#D4D4D4"

[colors.bright]
black = "#808080"
